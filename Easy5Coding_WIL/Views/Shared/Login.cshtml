@model Easy5Coding_WIL.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('@Url.Content("~/images/webAppBackLogin1.png")');
            
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 75vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
            display: flex;
            align-items: center; /* Centers vertically */
            justify-content: center; /* Centers horizontally */
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .card-header {
            background-color: #ffffff;
            color: #000000;
            font-weight: bold;
            text-align: center;
            font-size: 1.5rem;
        }

        .btn-primary {
            background-color: #5271ff;
            border-radius: 10px;
            border: none;
        }

            .btn-primary:hover {
                background-color: #4be8ad;
                color: #000000;
            }

        .text-center a {
            color: #007bff;
            text-decoration: none;
        }

            .text-center a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Login</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            @Html.AntiForgeryToken() <!-- Protect against CSRF -->

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Password</label>
                                <input asp-for="Password" class="form-control" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>                           
                            <div class="text-center">
                                <a asp-action="Register" asp-controller="Account">Don't have an account? | Register</a>
                            </div>
                        </form>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3">
                                @Html.ValidationSummary()
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
