@model Easy5Coding_WIL.Models.EmployeeDetails

<h2>Edit Employee Details</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="FirstName" asp-for="FirstName"></label>
                <input id="FirstName" asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="LastName" asp-for="LastName"></label>
                <input id="LastName" asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="JobRole" asp-for="JobRole"></label>
                <input id="JobRole" asp-for="JobRole" class="form-control" placeholder="Enter job role" />
                <span asp-validation-for="JobRole" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="Department" asp-for="Department"></label>
                <input id="Department" asp-for="Department" class="form-control" placeholder="Enter department" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Additional fields here, following the same layout pattern -->

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="EmploymentStartDate" asp-for="EmploymentStartDate"></label>
                <input id="EmploymentStartDate" asp-for="EmploymentStartDate" type="date" class="form-control" />
                <span asp-validation-for="EmploymentStartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="EmploymentEndDate" asp-for="EmploymentEndDate"></label>
                <input id="EmploymentEndDate" asp-for="EmploymentEndDate" type="date" class="form-control" />
                <span asp-validation-for="EmploymentEndDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="Role" asp-for="Role"></label>
        <select id="Role" asp-for="Role" class="form-control">
            <option value="">Select Role</option>
            <option value="Employee">Employee</option>
            <option value="HRManager">HR Manager</option>
            <option value="Manager">Manager</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Currently Employed</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
