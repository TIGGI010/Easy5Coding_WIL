@model IEnumerable<Easy5Coding_WIL.Models.LeaveRequest>

<h2 class="mb-4">Leave Requests</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Leave Request ID</th>
                    <th>Employee ID</th>
                    <th>Leave Type</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.LeaveRequestId</td>
                        <td>@request.EmployeeID</td>
                        <td>@request.LeaveType</td>
                        <td>
                            <span class="badge @(request.Status == "Approved" ? "bg-success" : (request.Status == "Pending" ? "bg-warning" : "bg-danger"))">
                                @request.Status
                            </span>
                        </td>
                        <td>@request.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@request.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a href="@Url.Action("Details", "Leave", new { id = request.LeaveRequestId })" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted">No leave requests found.</p>
}
