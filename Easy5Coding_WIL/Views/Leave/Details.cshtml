@model Easy5Coding_WIL.Models.LeaveRequest

<h2 class="mb-4">Leave Request Details</h2>

<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Employee ID:</strong>
            </div>
            <div class="col-md-8">
                @Model.EmployeeID
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Leave Type:</strong>
            </div>
            <div class="col-md-8">
                @Model.LeaveType
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Start Date:</strong>
            </div>
            <div class="col-md-8">
                @Model.StartDate.ToString("MM/dd/yyyy")
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>End Date:</strong>
            </div>
            <div class="col-md-8">
                @Model.EndDate.ToString("MM/dd/yyyy")
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Request Date:</strong>
            </div>
            <div class="col-md-8">
                @Model.RequestDate.ToString("MM/dd/yyyy")
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Status:</strong>
            </div>
            <div class="col-md-8">
                <span class="badge @(Model.Status == "Approved" ? "bg-success" : (Model.Status == "Pending" ? "bg-warning" : "bg-danger"))">
                    @Model.Status
                </span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Reason:</strong>
            </div>
            <div class="col-md-8">
                @Model.Reason
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
