@model List<Easy5Coding_WIL.Models.Payroll>

<h2 class="mb-4">Payroll List</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Salary</th>
                <th>Deductions</th>
                <th>Bonuses</th>
                <th>Net Pay</th>
                <th>Pay Period</th>
                <th>Pay Date</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payroll in Model)
            {
                <tr>
                    <td>@payroll.EmployeeID</td>
                    <td>@payroll.Salary.ToString("C")</td>
                    <td>@payroll.Deductions.ToString("C")</td>
                    <td>@payroll.Bonuses.ToString("C")</td>
                    <td class="@(payroll.NetPay < 0 ? "text-danger" : "text-success")">@payroll.NetPay.ToString("C")</td>
                    <td>@payroll.PayPeriod</td>
                    <td>@payroll.PayDate.ToString("MM/dd/yyyy")</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@payroll.PayrollId" class="btn btn-info btn-sm" title="View Payroll Details">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@payroll.PayrollId" class="btn btn-warning btn-sm" title="Edit Payroll Entry">
                            <i class="fas fa-pencil-alt"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@payroll.PayrollId" class="btn btn-danger btn-sm" title="Delete Payroll Entry" onclick="return confirm('Are you sure you want to delete this payroll entry?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-between mt-3">
    <div>
        <!-- Pagination buttons (if necessary) -->
        @* Example: Replace with actual page navigation logic *@
        <span>Showing 1 to 10 of 50 entries</span>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Add New Payroll</a>
    </div>
</div>

@section Scripts {
    <script>
        // Optional JavaScript for tooltips (if using Bootstrap tooltips)
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
